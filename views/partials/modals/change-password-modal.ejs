<script type="text/ng-template" id="change-password-modal.html">
    <div class="modal-header">
        <h3 class="modal-title text-center">Change Password</h3>
    </div>
    <form ng-submit="mCtrl.onSubmit()" class="counter-form" data-toggle="validator" role="form" name="changePasswordForm" ng-init="mCtrl.initChangePasswordModal()">
        <div class="modal-body">
            <div class="form-group" show-errors>
                <input type="password" class="form-control" name="password" placeholder="Enter password *" ng-model="passwordModel.password" data-minlength="6" required>
                <div class="help-block" ng-if="changePasswordForm.password.$error.required">Password is required</div>
                <div class="help-block" ng-if="changePasswordForm.password.$error && !changePasswordForm.password.$error.required">Not long enough</div>
            </div>
            <div class="form-group" show-errors>
                <input type="password" class="form-control" name="passwordConfirm" placeholder="Enter password again *" data-minlength="6" ng-model="passwordModel.password_confirm" required>
                <div class="help-block" ng-if="changePasswordForm.passwordConfirm.$error.required">Password Confirm is required</div>
                <div class="help-block" ng-if="changePasswordForm.passwordConfirm.$error && !changePasswordForm.passwordConfirm.$error.required">Not long enough</div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-xs-2">&nbsp;</div>
            <div class="col-xs-4">
                <button class="btn btn-block btn-primary" type="submit">OK</button>
            </div>
            <div class="col-xs-4">
                <a class="btn btn-block btn-warning" ng-click="mCtrl.cancel()">Cancel</a>
            </div>
            <div class="col-xs-2">&nbsp;</div>
        </div>
    </form>
</script>
